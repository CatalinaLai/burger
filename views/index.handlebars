<div class="container">

    <div class="row">

        <div class="col-md-12">
            <img src="/assets/img/burger.png" alt="burger">
        </div>

    </div>

    <div class="row">

        <div class="col-md-12">
            <h1 class="text-center" style="color=red">Eat-Da-Burger!</h1>
        </div>

    </div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col col-lg-3"></div>
        <div class="col col-lg-3">
            <ol>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    <h5>{{this.burger_name}}
                        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit" class="btn">Devour It!</button>
                        </form>
                    </h5>
                </li>
                {{/unless}} {{/each}}
            </ol>
        </div>

        <div class="col col-lg-3">
            <ol>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h5 class="text-muted">{{this.burger_name}}</h5>
                </li>
                {{/if}} {{/each}}
            </ol>
        </div>

    </div>
    </div>

    <br>

    <div class="row">

        <div class="col-md-12 text-center">
            <form class="create-update-form" action="burgers/insertOne" method="POST">
                <div class="form-group">
                    <textarea rows="3" type="text" name="name"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <h4 class="text-center">Enter a burger you want to eat Click "Submit" button.</h4>
                </div>
            </form>
        </div>
    </div>
</div>